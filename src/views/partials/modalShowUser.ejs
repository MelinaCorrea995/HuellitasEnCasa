<div class="modal fade" id="showModalUser<%= user.id %>" tabindex="-1" aria-labelledby="showModalUser<%= user.id %>Label"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="showModalUser<%= user.id %>Label">Datos del adoptante</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
                <div class="modal-body">
                    <p class="fs-3"><%= user.name %> <%= user.surname %></p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="fas fa-envelope"></i> <%= user.email %></li>
                        <li class="list-group-item"><i class="fas fa-phone"></i> <%= user.phone %></li>
                        <li class="list-group-item"><i class="fas fa-map-marker-alt"></i> <%= user.address %> <%= user.city && (user.city.name, user.city.province) %></li>
                      </ul>
                </div>
            </form>
            
        </div>
    </div>
</div>