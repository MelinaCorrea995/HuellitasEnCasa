<!DOCTYPE html>
<html lang="es-AR">
 
  <%- include('../partials/head') %>
<style>
  /* Container needed to position the overlay. Adjust the width as needed */
.container-card {
  position: relative;
  width: 300px;
  height: 300px;
}

/* Make the image to responsive */
.image-card {
  display: block;
  object-fit: cover;
  width: 100%;
  height: 100%
}

/* The overlay effect - lays on top of the container and over the image */
.overlay-card {
  position: absolute;
  bottom: 0;
  background: rgb(0, 0, 0);
  background: rgba(0, 0, 0, 0.5); /* Black see-through */
  color: #f1f1f1;
  width: 100%;
  transition: .5s ease;
  opacity:0;
  color: white;
  font-size: 20px;
  padding: 20px;
  text-align: center;
}

.container-card:hover {
  box-shadow: 0px 0px 10px 10px white;
}

/* When you mouse over the container, fade in the overlay title */
.container-card:hover .overlay-card {
  opacity: 1;
}
</style>
<body class="container">

  <%- include('../partials/header') %>

<!-- Sección Banner  -->
<div class="banner-container">

  <main class="content">
    <section id="animal-container">
      <div class="animales animal-list">
          <% animals.forEach(({id,name, sex, age, city, description, image})=> { %>
            <div class="container-card" data-aos="zoom-in">
              <img src="/images/<%= image %>" alt="<%= name %>" class="image-card">
              <div class="overlay-card">
                <h2>Soy <%= name %> </h2>
                <a href="/animals/detail/<%= id %> " style="text-decoration: none; color: white;">¿Querés conocerme?</a>
              </div>
            </div>
          <% }) %>
      </div>
    </section>
  
  </main>

  <%- include('../partials/footer') %>

