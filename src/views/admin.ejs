<!DOCTYPE html>
<html lang="es-AR">

<%- include('./partials/head.admin.ejs') %>

<body>
	<div id="wrapper">
		<!-- Content Wrapper -->
		<div id="content-wrapper" class="d-flex flex-column">

			<div id="content">
                <%- include('./partials/header.admin.ejs') %>
				<div class="container-fluid">
					<div class="row">
						<div class="col-md-4 mb-4">
							<div class="card border-left-primary shadow h-100 py-2">
								<a href="/animals" style="color: inherit;">
									<div class="card-body">
										<div class="row no-gutters align-items-center">
											<div class="col mr-2">
												<div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Mascotas en adopción</div>
												<div class="h5 mb-0 font-weight-bold text-gray-800"><%= animalsCount %> </div>
											</div>
											<div class="col-auto">
												<i class="fa-solid fa-paw  fa-2x text-gray-300"></i>
											</div>
										</div>
									</div>
								</a>
							</div>
						</div>

						<!-- Total awards -->
						<div class="col-md-4 mb-4">
							<div class="card border-left-success shadow h-100 py-2">
								<a href="/adoptions/adoptionsRegister">
									<div class="card-body">
										<div class="row no-gutters align-items-center">
											<div class="col mr-2">
												<div class="text-xs font-weight-bold text-success text-uppercase mb-1">Registro de adopciones</div>
												<div class="h5 mb-0 font-weight-bold text-gray-800"><%= adoptionsCount %></div>
											</div>
											<div class="col-auto">
												<i class="fas fa-award fa-2x text-gray-300"></i>
											</div>
										</div>
									</div>
								</a>
							</div>
						</div>

						<!-- Actors quantity -->
						<div class="col-md-4 mb-4">
							<div class="card border-left-warning shadow h-100 py-2">
								<a href="/users" style="color: inherit;">
									<div class="card-body">
										<div class="row no-gutters align-items-center">
											<div class="col mr-2">
												<div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Usuarios registrados
												</div>
												<div class="h5 mb-0 font-weight-bold text-gray-800"><%= usersCount %> </div>
											</div>
											<div class="col-auto">
												<i class="fas fa-user fa-2x text-gray-300"></i>
											</div>
										</div>
									</div>
								</a>
							</div>
						</div>
					</div>
					<!-- End movies in Data Base -->
					
	
					<!-- Content Row Last Movie in Data Base -->
					<div class="row">
						<!-- Last Movie in DB -->
						<div class="col-lg-6 mb-4">
							<div class="card shadow mb-4">
								<div class="card-header py-3">
									<h5 class="m-0 font-weight-bold text-gray-800">En espera de adopción</h5>
								</div>
								<div class="card-body">
									<div class="text-center">
										<img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 40rem;" src="/images/<%= animalInWaiting.image%> " alt=" Star Wars - Mandalorian ">
									</div>
									<h2><%= animalInWaiting.name %></h2>
									<p><%= animalInWaiting.description %> </p>
									<a class="btn btn-warning" target="_blank" rel="nofollow" href="/">Publicar solicitud de adopción</a>
								</div>
							</div>
						</div>
						<!-- End content row last movie in Data Base -->

						<!-- Genres in DB -->
						<div class="col-lg-6 mb-4">						
							<div class="card shadow mb-4">
								<div class="card-header py-3">
									<h5 class="m-0 font-weight-bold text-gray-800">Zonas</h5>
								</div>
								<div class="card-body">
									<div class="row">
                                        <% cities.forEach(city => { %>
                                            <div class="col-lg-6 mb-4">
                                                <div class="card bg-dark text-white shadow">
                                                    <div class="card-body">
														<p>
															<%= city.name %> (<%= city.province %>)
														</p>
														<p class="d-flex gap-2">
															<span>
																<i class="fa-solid fa-paw"></i>
																<%= city.animals.length %>
															</span>
															
															<span>
																<i class="fa-solid fa-user"></i>
																<%= city.users.length %>
															</span>
														</p>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!--End Content Row Top-->
			</div>
			<!-- End of MainContent -->

			<!-- Footer -->
			<footer class="sticky-footer bg-white">
				<div class="container my-auto">
					<div class="copyright text-center my-auto">
						<span>Copyright &copy; Dashboard 2021</span>
					</div>
				</div>
			</footer>
			<!-- End of Footer -->

		</div>
		<!-- End of Content Wrapper -->

	</div>
	<!-- End of Page Wrapper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>

</body>

</html>